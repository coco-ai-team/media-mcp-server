{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "module": "esnext"
  },
  "include": ["lib/**/*", "index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
